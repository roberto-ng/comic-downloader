{
  "name": "comic-downloader-electron",
  "version": "1.0.0",
  "main": "dist/electron.js",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/react-hot-loader": "^4.1.1",
    "comic-downloader-core": "1.0.0",
    "electron-is-dev": "^1.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.13.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "parcel-bundler": "^1.12.4",
    "react-hot-loader": "^4.13.0",
    "typescript": "^4.0.5",
    "wait-on": "^5.2.0"
  },
  "scripts": {
    "react-dev": "parcel build --target electron src/electron.ts --out-dir dist && parcel src/index.html --out-dir dist",
    "react-build": "parcel build src/electron.ts src/index.html --out-dir dist --target electron --public-url .",
    "start": "concurrently \"yarn react-dev\" \"wait-on http://localhost:1234 && electron . --start-dev\"",
    "electron-build": "electron-builder -mwl --projectDir dist",
    "electron-start": "electron ."
  }
}
